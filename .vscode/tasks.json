{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "args": ["/C"],
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        { 
            "suppressTaskName": true,
            "taskName": "npm install",
            "args": ["npm install"]
        },
        { 
            "isBuildCommand": true,
            "suppressTaskName": true,
            "taskName": "build",
            "args": ["ng build"]
        },
        {
            "suppressTaskName": true,
            "taskName": "serve",
            "args": [
                "ng serve"
            ]
        },
        {
            "suppressTaskName": true,
            "taskName": "test",
            "args": [
                "ng test"
            ]
        }
    ]

}